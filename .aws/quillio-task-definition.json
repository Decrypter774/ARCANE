{
  "family": "quillio",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "2048",
  "runtimePlatform": {
    "cpuArchitecture": "X86_64",
    "operatingSystemFamily": "LINUX"
  },
  "executionRoleArn": "arn:aws:iam::310473455728:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::310473455728:role/quillioTaskRole",
  "containerDefinitions": [
    {
      "name": "app",
      "image": "310473455728.dkr.ecr.us-east-1.amazonaws.com/quillio/app:latest",
      "essential": true,
      "portMappings": [
        { "containerPort": 80, "hostPort": 80, "protocol": "tcp", "appProtocol": "http" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/quillio",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
